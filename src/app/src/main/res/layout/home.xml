<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/sm_color"
        android:scaleType="fitCenter"
        android:padding="10dp"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/ic_logo01"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/xml_cart"
            android:background="?android:attr/selectableItemBackground"
            android:textStyle="bold"
            android:text="장바구니"
            />
        <Button
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:drawableTop="@drawable/xml_search"
            android:background="?android:attr/selectableItemBackground"
            android:textStyle="bold"
            android:text="물품검색"
            />
        <Button
            android:id="@+id/btnEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:drawableTop="@drawable/xml_event"
            android:background="?android:attr/selectableItemBackground"
            android:textStyle="bold"
            android:text="이벤트"
            />
        <Button
            android:id="@+id/btnMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:drawableTop="@drawable/xml_map"
            android:background="?android:attr/selectableItemBackground"
            android:textStyle="bold"
            android:text="지도"
            />
        <Button
            android:id="@+id/btnMypage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:drawableTop="@drawable/xml_mypage"
            android:background="?android:attr/selectableItemBackground"
            android:textStyle="bold"
            android:text="내 정보"
            />
        <Button
            android:id="@+id/btnChart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:drawableTop="@drawable/xml_chart"
            android:background="?android:attr/selectableItemBackground"
            android:textStyle="bold"
            android:text="결재정보"
            />
    </LinearLayout>


</LinearLayout>